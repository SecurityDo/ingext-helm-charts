# Ingext GKE Environment Variables
# 
# This is a template file. To generate your actual environment file, run:
#   ./preflight-gcp.sh
#
# Or manually set these variables and source this file:
#   source ./ingext-gke.env.example
#
# Then run the installer:
#   ./install-ingext-gke.sh \
#     --project "$PROJECT_ID" \
#     --region "$REGION" \
#     --cluster-name "$CLUSTER_NAME" \
#     --domain "$SITE_DOMAIN" \
#     --email "$CERT_EMAIL"

# GCP Configuration
export PROJECT_ID="my-gcp-project"
export REGION="us-east1"
export CLUSTER_NAME="ingext-gke"
export NODE_COUNT="2"
export MACHINE_TYPE="e2-standard-4"
export DISK_SIZE="20" # Boot disk size in GB per node (default: 20, GKE default is 100)

# Kubernetes Configuration
export NAMESPACE="ingext"

# Domain and Certificate Configuration
export SITE_DOMAIN="ingext.example.com"
export CERT_EMAIL="admin@example.com"

# Optional: VPC Configuration (leave empty to use default)
export VPC_NETWORK=""
export SUBNET=""

# Preflight Readiness Flags (for support/debugging)
# These are set by preflight-gcp.sh and indicate self-reported readiness
export PREFLIGHT_HAS_BILLING="yes"
export PREFLIGHT_HAS_OWNER="yes"
export PREFLIGHT_HAS_QUOTA="unsure"
export PREFLIGHT_HAS_DNS="yes"

