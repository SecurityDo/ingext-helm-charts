# Ingext Azure Datalake Environment Variables
# 
# This is a template file. To generate your actual environment file, run:
#   ./preflight-azure-datalake.sh
#
# Or manually set these variables and source this file:
#   source ./ingext-datalake-azure.env.example
#
# Then run the setup scripts:
#   ./aks_setup.sh "$RESOURCE_GROUP" "$LOCATION" "$CLUSTER_NAME" "$NODE_COUNT"
#   ./create_blob_storage.sh "$RESOURCE_GROUP" "$LOCATION" "$STORAGE_ACCOUNT_NAME" "$CONTAINER_NAME" "$EXPIRE_DAYS"
#   ./setup_ingext_serviceaccount.sh "$RESOURCE_GROUP" "$CLUSTER_NAME" "$NAMESPACE" "$STORAGE_ACCOUNT_NAME"

# Azure Configuration
export RESOURCE_GROUP="ingext-datalake-rg"
export LOCATION="eastus"
export CLUSTER_NAME="ingext-lake"
export NODE_COUNT="1"
export NODE_VM_SIZE="standard_dc2s_v3"

# Storage Configuration
export STORAGE_ACCOUNT_NAME="ingextdatalake"
export CONTAINER_NAME="datalake"
export EXPIRE_DAYS="30"

# Kubernetes Configuration
export NAMESPACE="ingext"

# Preflight Readiness Flags (for support/debugging)
# These are set by preflight-azure-datalake.sh and indicate self-reported readiness
export PREFLIGHT_HAS_BILLING="yes"
export PREFLIGHT_HAS_OWNER="yes"
export PREFLIGHT_HAS_QUOTA="unsure"
export PREFLIGHT_HAS_STORAGE="yes"

